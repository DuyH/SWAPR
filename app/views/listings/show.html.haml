.container
  .page-header
    %h1
      = @listing.title
  .col_12
    %p
      Owner:
      = @owner.name
      %br
      Contact Info:
      = @owner.email
    %hr
    %p
      = @listing.description
    %p
      Available for
      = @listing.borrow_length
      days
    - if current_user && current_user.id == @owner.id
      = link_to "Edit Post", edit_listing_path, class: "btn btn-lg btn-primary"
